    "https://gist.githubusercontent.com/fdopen/e071d078f117db434deac680d83e72a6/raw/fb849e51083f86b980e9cf895fbb32e2d6db33c2/ocaml-4.09.1.patch"
  checksum: "sha512=8dfb0a100459443440928fd94d48a3058590ffa626d7bc50d14936c35d0f41ecd27b65cdbe613bab2c28762268ae4f6e6c3778341709a49702e67f2eda155ba0"
}
extra-source "inline-flexdll.patch" {
  src:
    "https://gist.githubusercontent.com/fdopen/fdc645a61a208552ebac76a67eafd3ee/raw/9f521e91c8f0e9490652651ccdbfae88da701919/inline-flexdll.patch"
  checksum: "sha512=c62b6725b14e37f7d98e45c3c7308dacb292830bac293eb4b13fe3b1f0cfc035a14315433cf58defd485845e5cb738f7d1f050b416a0052b176d5b276e40a560"
